<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:transitionName="transition_dos"
    tools:context=".ForgetPasswordThree">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/set_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/content_description"
            android:src="@drawable/ic_reset" />

        <TextView
            android:id="@+id/set_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_icon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/lineto_circular_pro_black"
            android:gravity="center_horizontal"
            android:text="@string/new_credentials"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/set_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_title"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/lineto_circular_pro_book"
            android:gravity="center"
            android:text="@string/new_credentials_desc"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/fgtw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_desc"
            android:layout_marginStart="12dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/lineto_circular_pro_medium"
            android:text="@string/new_password"
            android:textSize="15sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fgt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fgtw"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/lineto_circular_pro_book"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="#101010" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/fgtwt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fgt_password"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lineto_circular_pro_medium"
            android:text="@string/confirm_password"
            android:textSize="15sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/fgtt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fgtwt"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bg_edit_text"
                android:fontFamily="@font/lineto_circular_pro_book"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="#101010" />

        </com.google.android.material.textfield.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/fgtt_password"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/next_btn"
                android:layout_width="135dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:background="@drawable/bg_black_rounded"
                android:fontFamily="@font/lineto_circular_pro_bold"
                android:gravity="center"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:transitionName="transition_tres" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>