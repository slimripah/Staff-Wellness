<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Steps">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_buffer"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_centerHorizontal="true"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/buffer" />

            <TextView
                android:id="@+id/steps_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/split"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/lineto_circular_pro_bold"
                android:text="@string/step_one"
                android:textColor="@color/white" />

            <View
                android:id="@+id/split"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:background="@color/clear" />

            <TextView
                android:id="@+id/steps_taken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/split"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/lineto_circular_pro_bold"
                android:text="@string/step_two"
                android:textColor="@color/white" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lineto_circular_pro_bold"
            android:text="@string/step_three"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:rowCount="2"
                tools:ignore="UselessParent">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#f4f4f4"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lineto_circular_pro_bold"
                            android:text="@string/step_four" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:contentDescription="@string/content_description"
                            android:src="@drawable/ic_calory" />

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottie_calories"
                            android:layout_width="70dp"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/meter" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/lottie_calories"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/lineto_circular_pro_medium"
                            android:text="@string/step_five"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/lottie_calories"
                            android:layout_marginTop="39dp"
                            android:fontFamily="@font/lineto_circular_pro_book"
                            android:text="@string/step_six"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/lottie_calories"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/lineto_circular_pro_medium"
                            android:text="@string/step_seven"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/lottie_calories"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="39dp"
                            android:fontFamily="@font/lineto_circular_pro_book"
                            android:text="@string/step_eight"
                            android:textSize="12sp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#f4f4f4"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lineto_circular_pro_bold"
                            android:text="@string/step_nine" />

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:contentDescription="@string/content_description"
                            android:src="@drawable/ic_distance" />

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottie_distance"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/speed" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/lottie_distance"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="29dp"
                            android:fontFamily="@font/lineto_circular_pro_bold"
                            android:text="@string/step_ten"
                            android:textSize="15sp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#f4f4f4"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lineto_circular_pro_bold"
                            android:text="@string/step_eleven" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:contentDescription="@string/content_description"
                            android:src="@drawable/ic_minutes" />

                        <TextView
                            android:id="@+id/move_minutes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="45dp"
                            android:layout_marginTop="80dp"
                            android:fontFamily="@font/lineto_circular_pro_bold"
                            android:text="@string/step_twelve"
                            android:textSize="18sp"
                            tools:ignore="RelativeOverlap" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="84dp"
                            android:layout_toEndOf="@id/move_minutes"
                            android:fontFamily="@font/lineto_circular_pro_bold"
                            android:text="@string/step_thirteen"
                            android:textSize="14sp"
                            tools:ignore="RelativeOverlap" />

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottie_minutes"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="100dp"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/minutes" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="#f4f4f4"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lineto_circular_pro_bold"
                            android:text="@string/step_fourteen" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:contentDescription="@string/content_description"
                            android:src="@drawable/ic_speed" />

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottie_speed"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/walking" />

                        <TextView
                            android:id="@+id/walk_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="45dp"
                            android:fontFamily="@font/lineto_circular_pro_bold"
                            android:text="@string/step_fifteen"
                            android:textSize="18sp"
                            tools:ignore="RelativeOverlap" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="2dp"
                            android:layout_toEndOf="@id/walk_speed"
                            android:fontFamily="@font/lineto_circular_pro_bold"
                            android:text="@string/step_sixteen"
                            android:textSize="14sp"
                            tools:ignore="RelativeOverlap" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/lineto_circular_pro_bold"
            android:text="@string/step_twentyThree"
            android:textColor="@color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                tools:ignore="UselessLeaf,UselessParent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/stairs_card"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    app:cardBackgroundColor="#f4f4f4"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lineto_circular_pro_bold"
                            android:text="@string/step_eighteen" />

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottie_stairs"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="40dp"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/stairs" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="@font/lineto_circular_pro_bold"
                            android:text="@string/step_nineteen"
                            android:textSize="18sp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/trends_card"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    app:cardBackgroundColor="#f4f4f4"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lineto_circular_pro_bold"
                            android:text="@string/step_seventeen" />

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottie_trends"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_centerInParent="true"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/trends" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/highlights_card"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="#f4f4f4"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lineto_circular_pro_bold"
                            android:text="@string/step_twenty" />

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottie_highlights"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/highlights" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/goals_card"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="-20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="#f4f4f4"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lineto_circular_pro_bold"
                            android:text="@string/step_twentyOne" />

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottie_goals"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/pinpoint" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/lineto_circular_pro_bold"
            android:text="@string/step_twentyTwo"
            android:textColor="@color/black" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="#f4f4f4"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lineto_circular_pro_bold"
                    android:text="@string/step_twentyFour" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>