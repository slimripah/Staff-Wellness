<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".Steps">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_buffer"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_centerHorizontal="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/buffer" />

        <TextView
            android:id="@+id/steps_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/split"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/lineto_circular_pro_bold"
            android:text="@string/step_one"
            android:textColor="@color/white" />

        <View
            android:id="@+id/split"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:background="@color/clear" />

        <TextView
            android:id="@+id/steps_taken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/split"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/lineto_circular_pro_bold"
            android:text="@string/step_two"
            android:textColor="@color/white" />

    </RelativeLayout>

</LinearLayout>